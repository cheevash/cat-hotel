{
  "name": "hotels-com",
  "version": "1.0.0",
  "description": "Search and book hotels, earn One Key rewards on Hotels.com",
  "author": "Canifi LifeOS",
  "category": "travel",
  "permissions": [
    "browser",
    "notifications",
    "env:HOTELS_EMAIL"
  ],
  "triggers": [
    "hotels.com",
    "hotels",
    "hotel booking",
    "one key hotels",
    "secret prices"
  ],
  "authentication": {
    "type": "oauth-browser",
    "loginUrl": "https://www.hotels.com/user/signin",
    "requires2FA": false,
    "twoFactorMethod": "email"
  },
  "endpoints": {
    "base": "https://www.hotels.com",
    "search": "https://www.hotels.com/Hotel-Search",
    "bookings": "https://www.hotels.com/trips"
  },
  "rateLimit": {
    "requests": 25,
    "period": "minute"
  }
}
